    <title>Document</title>
</head>
<body>
    <script>
        //function to convert a character to lower case
        function arrayToLower(arr){
            return arr.map(word => word.toLowerCase());
        }

        //simple output
        const inputArray =["MA", "SA", "I", "SCH", "OOL"];

        // Convert the array to lowercase
        const outputArray = arrayToLower(inputArray);

        console.log(outputArray); // Output: ["ma", "sa", "i", "sch", "ool"]


    </script>
</body>
</html>